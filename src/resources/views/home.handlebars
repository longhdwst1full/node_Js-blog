<div class="mt-4">
    <div class="row">
        {{#each courses}}
        
        <div class="col-sm-6 col-lg-4">
         <a href="/courses/{{this.slug}}">
            <img class="card-img-top" src="{{this.image}}">
            </a>
            
            <div class="card-body">

                <div class="card-title">
                    {{this.name}}
                </div>
                <p class="card-text">
                    {{this.description}}
                </p>
                <a href="#" class="btn btn-primary">
                    Mua khoa hoc
                </a>
            </div>
        </div>
        {{/each}}
    </div>
</div>