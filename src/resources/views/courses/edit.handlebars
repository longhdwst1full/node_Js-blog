<div class="mt-4">
    <h3>
        khóa học của tôi<h3>
            <form action="/courses/{{course._id}}?_method=PUT" method="post">
                <div class="form-group">
                    <label>Tên khóa hoc</label>
                    <input type="text" class="form-control" value="{{course.name}}" name="name">
                </div>
                <div class="form-group">
                    <label for="description">Mô tả khóa hoc</label>
                    <textarea type="text" class="form-control" id="description"
                        name="description">{{course.description}}</textarea>
                </div>
                <div class="form-group">
                    <label>Trình độ</label>
                    <input type="text" class="form-control" value="{{course.level}}" id="level" name="level">
                </div>
                <div class="form-group">
                    <label for="">Video id</label>
                    <input type="text" value={{course.videoId}} class="form-control" name="videoId">
                </div>
                <button>submit</button>
            </form>
</div>